#const onto="examples/koala/koala-meta.json".

% guess couples
{ couple(A,B) } :- &dlCro[onto,"koala:Animal"](A), &dlCro[onto,"koala:Animal"](B), A < B.

% couples are symmetric
couple(A,B) :- couple(B,A).

% forbid couples of more than 2 people
:- couple(A,B), couple(B,C), A != C.

% forbid couples of same gender
:- couple(A,B), &dlDRro[onto,"koala:hasGender"](A,Gender), &dlCro[onto,"koala:hasGender"](B,Gender).

gender(A',G') :- &dlDRro[onto,"koala:hasGender"](A,G), &dlSimplifyIRI[onto,A](A'), &dlSimplifyIRI[onto,G](G').

pairing(A',B') :- &dlSimplifyIRI[onto,A](A'), &dlSimplifyIRI[onto,B](B'), couple(A,B), A < B.

#show.
#show pairing/2.
#show gender/2.
